<view class="task-list">
  <!-- 添加任务 -->
  <view class="add-task-box">
    <input class="weui-input" name="{{taskName}}" value="{{taskName}}" placeholder=" 任务名称" bindinput="bindNameInput" />
    <input class="weui-input" name="{{taskReward}}" value="{{taskReward}}" placeholder="任务奖励" bindinput="bindRewardInput" />
    <button style="margin:0" type="primary" size="mini" bindtap="onAddTask">添加</button>
  </view>

  <!-- 操作 -->
  <view class="task-list-title">
    <text>任务列表</text>
    <button style="margin-left:50rpx;margin-right: 0;" type="default" size="mini" bindtap="onQueryTask">刷 新</button>
  </view>

  <!-- 任务列表 -->
  <view class="task-list-content">

    <view class="list-title">
      <view class="list-title-item">名称</view>
      <view class="list-title-item">奖励</view>
      <view class="list-title-item">操作</view>
    </view>

    <!-- <view class="list-content"> -->
    <!-- style="height: 300rpx;" -->
    <scroll-view scroll-y="true" class="list-content" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
      <view class="list-title" wx:for="{{taskList}}" wx:key="index">
        <text class="list-title-item">{{item.name}}</text>
        <text class="list-title-item">{{item.reward}}</text>
        <button type="warn" size="mini" data-task="{{item}}" bindtap="onRemove">删除</button>
      </view>
    </scroll-view>
  </view>



  <!-- <view class="list-content">
  </view> -->


</view>