<view class="task-list">
    <!-- 添加任务 -->
    <!-- <view class="add-task-box">
        <input class="weui-input" name="{{taskName}}" value="{{taskName}}" placeholder=" 任务名称" bindinput="bindNameInput" />
        <input class="weui-input" name="{{taskReward}}" value="{{taskReward}}" placeholder="任务奖励" bindinput="bindRewardInput" />
    </view> -->

    <mp-dialog title="弹窗" show="{{dialogShow}}" bindbuttontap="tapDialogButton" buttons="{{buttons}}">
        <view>提示内容</view>
    </mp-dialog>

    <!-- 操作 -->
    <view class="task-list-title">
        <text style="font-size: 16px;font-weight: 600;">任务列表</text>
        <button style="margin-left: 20rpx;margin-right: 0;" type="default" size="mini" bindtap="onQueryTask">刷 新</button>
        <button style="margin-left: 20rpx; ;" type="primary" size="mini" bindtap="openConfirm">添加</button>
    </view>

    <!-- 任务列表 -->
    <view class="table">
        <view class="tr bg-w">
            <view class="th">名称</view>
            <view class="th">奖励</view>
            <view class="th">操作</view>
        </view>
        <block wx:for="{{taskList}}" wx:key="index">
            <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
                <view class="td">{{item.name}}</view>
                <view class="td">{{item.reward}}</view>
                <view class="td">
                    <button style="margin-left: 0;" size="mini" data-task="{{item}}" bindtap="onRemoveTask">删除</button>
                </view>
            </view>
            <view class="tr" wx:else>
                <view class="td">{{item.name}}</view>
                <view class="td">{{item.reward}}</view>
                <view class="td">
                    <button style="margin-left: 0;" size="mini" data-task="{{item}}" bindtap="onRemoveTask">删除</button>
                </view>
            </view>
        </block>
    </view>
</view>