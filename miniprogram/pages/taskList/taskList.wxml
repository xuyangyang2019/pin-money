<view class="task-list">

  <!-- 操作 -->
  <view class="task-list-title">
    <text>任务列表</text>

    <button style="margin-left:50rpx;margin-right: 0;" type="primary" size="mini" bindtap="onAddTask">添 加</button>
    <!-- <navigator style="margin: 0 5px;" url="../databaseGuide/databaseGuide" open-type="navigate" class="uploader-text">
      <text>添加任务</text>
    </navigator> -->

    <button style="margin-left:50rpx;margin-right: 0;" type="default" size="mini" bindtap="onQueryTask">刷 新</button>
  </view>


  <!-- 任务列表 -->
  <view class="task-list-content">

    <view class="list-title">
      <view class="list-title-item">名称</view>
      <view class="list-title-item">奖励</view>
      <view class="list-title-item">操作</view>
    </view>

    <!-- <view class="list-content"> -->
    <!-- style="height: 300rpx;" -->
    <scroll-view scroll-y="true" class="list-content" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
      <view class="list-item" wx:for="{{taskList}}" wx:key="index">
        <text>{{item.name}}</text>
        <text>{{item.price}}</text>
        <text>删除</text>
      </view>
    </scroll-view>
  </view>



  <!-- <view class="list-content">
  </view> -->


</view>