/**index.wxss**/
.home-view {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
}

.home-content {
  display: flex;
  box-sizing: border-box;
}

.user-list-content {
  min-width: 100rpx;
  margin-right: 20rpx;
}

.user-item {
  padding: 20rpx 0;
}

.user-item-checked {
  color: green;
  border-bottom: solid green 2px;
}


.task-list-content {
  flex: 1 1 auto;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  /* border: solid black 1rpx; */
}

.list-title {
  display: flex;
  border: solid #DFDFDF 1rpx;
}


.table {
  border: 0px solid darkgray;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  min-height: 3rem;
  align-items: center;
}

.td {
  width: 50%;
  justify-content: center;
  text-align: center;
}

.bg-w {
  background: snow;
}

.bg-g {
  background: #E6F3F9;
}

.th {
  width: 50%;
  justify-content: center;
  background: green;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}

.list-task-state {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
  box-sizing: border-box;
}

.operation-btn {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-left: 20rpx;
}

.wx-switch-input {
  width: 42px !important;
  height: 22px !important;
}

.wx-switch-input::before {
  width: 40px !important;
  height: 20px !important;
}

.wx-switch-input::after {
  width: 18px !important;
  height: 18px !important;
}