<!--index.wxml-->
<view class="home-view">
  <view wx:if="{{childrenList.length === 0}}">没有用户，请到用户管理添加用户</view>
  <view wx:else class="home-content">
    <!-- 用户列表 -->
    <view class="user-list-content">
      <view class="'user-item' {{currentUserId === item._id ? 'user-item-checked':''}}" wx:for="{{childrenList}}" wx:key="index">
        <text class="user-name" data-user="{{item}}" bindtap="onChoseUser">{{item.name}}</text>
      </view>
    </view>

    <!-- 任务列表 -->
    <view class="task-list-content">
      <view class="list-title">
        <view class="list-title-item">任务名称</view>
        <view class="list-title-item">完成状态</view>
      </view>
      <view wx:if="{{taskList.length === 0}}">没有用户，请到任务管理添加任务</view>
      <scroll-view wx:else scroll-y="true" class="list-content">
        <view class="itme-box" wx:for="{{taskList}}" wx:key="index">
          <text class="list-item">{{item.name}}</text>
          <view class="list-item operation-btn">
            <!-- <button style="margin-left: 0;" size="mini" data-task="{{item}}" bindtap="onRemove">删除</button> -->
            <switch checked="{{false}}" data-task="{{item}}" bindchange="switch1Change" />
          </view>
        </view>
      </scroll-view>
    </view>
  </view>

  <!-- 上传图片 -->
  <!-- <view class="uploader">
    <view class="uploader-text" bindtap="doUpload">
      <text>上传图片</text>
    </view>
    <view class="uploader-container" wx:if="{{imgUrl}}">
      <image class="uploader-image" src="{{imgUrl}}" mode="aspectFit" bindtap="previewImg"></image>
    </view>
  </view> -->
</view>