/**taskCount.wxss**/
.home-view {
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    box-sizing: border-box;
    background-color: #fff;
}

.count-tip {
    padding: 20rpx 0;
    font-weight: 600;
    margin-right: 20rpx;
    display: flex;
    align-items: center;
}

.table {
    border: 0px solid darkgray;
    background-color: #F6F6F6;
}

.tr {
    display: flex;
    width: 100%;
    justify-content: center;
    height: 3rem;
    align-items: center;
}

.td {
    width: 40%;
    justify-content: center;
    text-align: center;
}

.bg-w {
    background: snow;
}

.bg-g {
    background: #E6F3F9;
}

.th {
    width: 40%;
    justify-content: center;
    background: green;
    color: #fff;
    display: flex;
    height: 3rem;
    align-items: center;
}

.th2,
.td2 {
    width: 50%;
}

.list-header {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin-top: 50rpx;
}

.fontColor+.fontColor {
    margin-left: 20rpx;
}